# Postgres connection string (required in all environments).
DATABASE_URL="postgresql://USER:PASSWORD@HOST:5432/DB?sslmode=require"
DIRECT_URL="postgresql://USER:PASSWORD@HOST:5432/DB?sslmode=require"
ALLOW_DB_RESET_ON_FAILED_MIGRATIONS=0
POLYPICKS_DEBUG_RELAX_FILTER=0
POLYPICKS_DEBUG_RELAX=0
# Server-side CLOB host (do not expose to client for order placement).
POLYMARKET_CLOB_URL="https://clob.polymarket.com"
# Polymarket Builder trading
ENABLE_TRADING=false
POLY_BUILDER_API_KEY=
POLY_BUILDER_SECRET=
POLY_BUILDER_PASSPHRASE=
# Client-side debug flags
NEXT_PUBLIC_CLOB_DEBUG=false
NEXT_PUBLIC_FORCE_EOA=false
NEXT_PUBLIC_APP_URL=http://localhost:3000
NEXT_PUBLIC_POLYGON_RPC_URL=
NEXT_PUBLIC_POLY_RELAYER_URL=
NEXT_PUBLIC_WALLET_V2=false
NEXT_PUBLIC_WALLETCONNECT_PROJECT_ID=
NEXT_PUBLIC_POLY_SIGNATURE_TYPE=2
NEXT_PUBLIC_POLY_SLIPPAGE_BPS=50
NEXT_PUBLIC_POLY_BOOK_POLL_MS=5000
NEXT_PUBLIC_POLY_ENABLE_RELAYER=0
POLY_RELAYER_ALLOW_SERVER_DEPLOY=0
POLYMARKET_DATA_API_BASE_URL=https://data-api.polymarket.com
# Note: avoid NEXT_PUBLIC_POLYMARKET_CLOB_URL for order placement.
# Set the real key in .env.local or Vercel Environment Variables.
FOOTBALL_DATA_API_KEY=
