generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

model TrackedMarket {
  id             String   @id
  title          String
  category       String?
  trackedOutcome String
  entryPrice     Float
  appearedAt     DateTime
  marketUrl      String
  closedAt       DateTime?
  resolvedOutcome String?
  resolvedAt     DateTime?
  createdAt      DateTime @default(now())
}

model HistoryEntry {
  id             String   @id @default(cuid())
  marketId       String
  title          String
  category       String?
  trackedOutcome String
  entryPrice     Float
  resolvedOutcome String
  appearedAt     DateTime
  resolvedAt     DateTime
  closedAt       DateTime?
  marketUrl      String
  createdAt      DateTime @default(now())

  @@index([resolvedAt])
  @@index([marketId])
}

model User {
  id           String     @id @default(cuid())
  name         String     @unique
  passwordHash String
  createdAt    DateTime   @default(now())
  sessions     Session[]
  bookmarks    Bookmark[]
  alerts       Alert[]
  notifications Notification[]
}

model Session {
  id        String   @id @default(cuid())
  userId    String
  tokenHash String   @unique
  createdAt DateTime @default(now())
  expiresAt DateTime

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
}

model Bookmark {
  id        String   @id @default(cuid())
  userId    String
  marketId  String
  title     String?
  category  String?
  marketUrl String?
  initialPrice Float?
  createdAt DateTime @default(now())

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([userId, marketId])
  @@index([marketId])
}

model Alert {
  id                 String   @id @default(cuid())
  userId             String
  marketId           String
  entryPriceCents    Float
  profitThresholdPct Float?
  lossThresholdPct   Float?
  enabled            Boolean  @default(true)
  triggerOnce        Boolean  @default(true)
  cooldownMinutes    Int      @default(60)
  lastTriggeredAt    DateTime?
  createdAt          DateTime @default(now())
  updatedAt          DateTime @updatedAt

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@index([marketId])
  @@unique([userId, marketId])
}

model Notification {
  id        String   @id @default(cuid())
  userId    String
  type      String
  title     String
  body      String
  marketId  String?
  createdAt DateTime @default(now())
  readAt    DateTime?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId, createdAt])
  @@index([readAt])
}
