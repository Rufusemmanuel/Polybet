generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

model TrackedMarket {
  id             String   @id
  title          String
  category       String?
  trackedOutcome String
  entryPrice     Float
  appearedAt     DateTime
  marketUrl      String
  closedAt       DateTime?
  resolvedOutcome String?
  resolvedAt     DateTime?
  createdAt      DateTime @default(now())
}

model HistoryEntry {
  id             String   @id @default(cuid())
  marketId       String
  title          String
  category       String?
  trackedOutcome String
  entryPrice     Float
  resolvedOutcome String
  appearedAt     DateTime
  resolvedAt     DateTime
  closedAt       DateTime?
  marketUrl      String
  createdAt      DateTime @default(now())

  @@index([resolvedAt])
  @@index([marketId])
}

model User {
  id           String     @id @default(cuid())
  name         String     @unique
  passwordHash String
  createdAt    DateTime   @default(now())
  sessions     Session[]
  bookmarks    Bookmark[]
}

model Session {
  id        String   @id @default(cuid())
  userId    String
  tokenHash String   @unique
  createdAt DateTime @default(now())
  expiresAt DateTime

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
}

model Bookmark {
  id        String   @id @default(cuid())
  userId    String
  marketId  String
  title     String?
  category  String?
  marketUrl String?
  initialPrice Float?
  createdAt DateTime @default(now())

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([userId, marketId])
  @@index([marketId])
}
